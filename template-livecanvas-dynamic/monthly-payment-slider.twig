<div class="relative mb-6 max-w-3xl w-full">
        <label for="monthly-bill-range" class="block flex items-center justify-center py-4 mb-2 text-base font-bold text-gray-900">
        <div class="text-6xl rotate-6">
        <span 
            class="bg-white px-1 px-2 rounded-lg sun-shadow-glow bg-gradient-to-br rotate-6 from-yellow-400 via-orange-700 to-orange-900 bg-clip-text text-transparent rounded-lg"
            x-text="`$${selectedMonthlyBill}`">
        </span>
        </div>
        </label>
        <input 
            id="monthly-bill-range" 
            name="monthlyBill"
            type="range" 
            x-bind:min="100"
            x-bind:max="500"
            value="300"
            step="25"
            x-model="selectedMonthlyBill"
            x-on:change="selectedBill"
            class="custom-range w-full range-lg h-2 accent-orange-900 bg-gradient-to-r from-yellow-400 to-orange-900 rounded-lg appearance-none cursor-pointer dark:bg-gray-700">
        <!-- Labels -->
        <div class="flex justify-between text-sm text-gray-500 dark:text-gray-400 mt-2 -z-5">
                <span class="text-sm text-gray-500 dark:text-gray-400 absolute z-0 start-0 -bottom-6">Min ($100)</span>
                <span class="text-sm text-gray-500 dark:text-gray-400 absolute z-0 end-0 -bottom-6">Max ($500)</span>
        </div>
    </div>